<div class="container">
  <div class="heading">
    <h3>{{ section.settings.title }}</h3>
  </div>
  <div class="content">
    <div class="grid_item first desktop">
      {% assign collection = collections[section.settings.collecon_1] %}
      <div class="content" style="background: url({{section.settings.image_1 | img_url:'1024x'}}) 50% 50% / cover no-repeat;">
        <div class="caption_info desktop">
          <p class="title">{{collection.title}}</p>
          <a href="{{collection.url}}" class="btn ex_small-btn">View</a>
        </div>
        
      </div>
      <div class="caption_info mobile">
        <p class="title"><a href="{{collection.url}}">{{collection.title}}</a></p>
      </div>
    </div>
    <div class="grid_item second">
    
      <div class="grid_item">
        {% assign collection = collections[section.settings.collecon_2] %}
        <div class="content" style="background: url({{section.settings.image_2 | img_url:'1024x'}}) 50% 50% / cover no-repeat;">
          <div class="caption_info desktop">
            {% comment %} <p class="title">{{collection.title}}</p>
            <a href="{{collection.url}}" class="btn ex_small-btn">View</a> {% endcomment %}
            <p class="title">{{ collection.title }}</p>
            <a href="{{ collection.url }}" class="btn ex_small-btn">View</a>
          </div>
          <a href="{{ collection.url }}" class="cst_mobile_a"></a>
        </div>
        <div class="caption_info mobile">
          <p class="title"><a href="{{ collection.url }}">{{ collection.title }}</a></p>
        </div>
      </div>

      <div class="grid_item mobile">
        {% assign collection = collections[section.settings.collecon_1] %}
        <div class="content" style="background: url({{section.settings.image_1 | img_url:'1024x'}}) 50% 50% / cover no-repeat;">
          <div class="caption_info desktop">
            <p class="title">{{collection.title}}</p>
            <a href="{{collection.url}}" class="btn ex_small-btn">View</a>
          </div>
          <a href="{{collection.url}}" class="cst_mobile_a"></a>
        </div>
        <div class="caption_info mobile">
           <p class="title"><a href="{{collection.url}}">{{collection.title}}</a></p>
        </div>
      </div>
      
      <div class="grid_item">
        {% assign collection = collections[section.settings.collecon_3] %}
