          <div class="caption_info desktop">
            <p class="title">{{collection.title}}</p>
            <a href="https://kellywynne.com/pages/all-accessories" class="btn ex_small-btn">View</a>
          </div>
          <a href="https://kellywynne.com/pages/all-accessories" class="cst_mobile_a"></a>
        </div>
        <div class="caption_info mobile">
           <p class="title"><a href="https://kellywynne.com/pages/all-accessories">{{collection.title}}</a></p>
        </div>
      </div>

      <div class="grid_item">
        {% assign collection = collections[section.settings.collecon_4] %}
        <div class="content" style="background: url({{section.settings.image_4 | img_url:'1024x'}}) 50% 50% / cover no-repeat;">
          <div class="caption_info desktop">
            <p class="title">{{collection.title}}</p>
            <a href="{{collection.url}}" class="btn ex_small-btn">View</a>
          </div>
          <a href="{{collection.url}}" class="cst_mobile_a"></a>
        </div>
        <div class="caption_info mobile">
          <p class="title"><a href="{{collection.url}}">{{collection.title}}</a></p>
        </div>
      </div>

    </div>
    
  </div>
</div>

